---

# Generic
generic:
  role: ansible-role-facts
  role_short: facts
  role_description: |
    Provisions several custom facts and runs setup optionally

# Molecule
molecule:
  converge:
    post: converge-post.yml
    vars:
      custom_facts_additional:
        - name: fact1
          groups: all
        - name: fact2
          os_family: [ 'RedHat' ]
        - name: fact3
          group: group1
        - name: fact4
          groups: [ 'group2' ]
